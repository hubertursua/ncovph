{
  "emulators": {
    "functions": {
      "port": "4000"
    }
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "trailingSlash": false,
    "predeploy": [
      "npm --prefix hosting run build"
    ],
    "public": "hosting/build",
    "ignore": [
      "**/*.log",
      "**/.*",
      "**/node_modules/**",
      "firebase.json"
    ],
    "rewrites": [
      {
        "source": "/api{,/**/*}",
        "function": "api"
      }
    ]
  }
}
